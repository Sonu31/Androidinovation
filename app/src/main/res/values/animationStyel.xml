<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Up_Down_animaiton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#7C57BD</item>
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="LEFT_RIGHT_Animaiton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#5294C7</item>
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="FADEIn_FADEOUT_Animaiton">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="COMELEFT_GORIGHT">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

</resources>