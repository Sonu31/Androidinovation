<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F4F0"
    tools:context=".drawerfragment.DrFragment3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/CATAGORYtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUTTON"
            android:padding="@dimen/_4sdp"
            android:textColor="#E91E63"
            android:textSize="@dimen/_20ssp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textStyle="bold"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/textButton1id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="#2196F3"
            app:layout_constraintTop_toBottomOf="@+id/CATAGORYtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Text button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/baseline_verified_24" />

        <Button
            android:id="@+id/outlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUTLINED BUTTON"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/textButton1id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:strokeColor="#2196F3"
            app:strokeWidth="@dimen/_2sdp"
           style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            />


        <Button
            android:id="@+id/containedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contained button"
            app:layout_constraintTop_toBottomOf="@+id/outlinedButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/containedButton"
           android:layout_marginEnd="@dimen/_50sdp"
            android:contentDescription="Regular FAB example"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/baseline_where_to_vote_24"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/floating_action_button"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/floating_action_button"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content"
            >



       <com.google.android.material.card.MaterialCardView
           android:id="@+id/cardid2"
           android:layout_width="200sp"
           android:layout_height="200sp"
           android:layout_marginBottom="@dimen/_40sdp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:cardBackgroundColor="@color/white"
           app:cardElevation="@dimen/_100sdp"
           app:layout_constraintTop_toTopOf="parent"
           android:clickable="true"
           android:focusable="true"
           android:checkable="true"

           >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>

       </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>