<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C9C8C7"
    tools:context=".Tablayout.fragment.firsttablayout.FirstTabFragment">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout1id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="center"
        android:background="@drawable/firsttabbackground"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        android:layout_margin="@dimen/_10sdp"
        app:tabRippleColor="@null"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager1"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_4sdp"

        android:layout_height="@dimen/_100sdp"
        app:layout_constraintTop_toBottomOf="@+id/tablayout1id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout1id2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/viewpager1"
            android:background="@drawable/firsttabbackground"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        android:layout_margin="@dimen/_10sdp"
        app:tabRippleColor="@null"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager2"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tablayout1id2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout1id3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/viewpager2"
        android:background="@drawable/firsttabbackground"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        android:layout_margin="@dimen/_10sdp"
        app:tabRippleColor="@null"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@+id/tablayout1id3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>