<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5D223"
    tools:context=".libraries.homescreen.LibrarieshomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#03A9F4"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/waterfalltoolbarbtnid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_13sdp"
            app:strokeColor="#3A3838"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="#DDEBD8D8"
            android:layout_marginHorizontal="@dimen/_20sdp"
       >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waterfall Toolbar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"
                    android:paddingVertical="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:background="@drawable/rounded_shape2"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="#141414"
                    />
                <TextView
              android:id="@+id/waterfalllinkid"

                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/text1"
                    android:text="GifHub Link"
                    android:paddingVertical="@dimen/_3sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/rounded_shape1"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center_horizontal"
                    android:textColor="#0B4D82"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_3sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_9sdp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutbtnid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_13sdp"
                app:strokeColor="#3A3838"
                app:strokeWidth="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/waterfalltoolbarbtnid"
                app:cardBackgroundColor="#DDEBD8D8"
                android:layout_marginHorizontal="@dimen/_20sdp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SwipeBackLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold"
                        android:paddingVertical="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:background="@drawable/rounded_shape2"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="#141414"
                        />
                    <TextView
                        android:id="@+id/swipebacklayoutlinkid"

                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/text2"
                        android:text="GifHub Link"
                        android:paddingVertical="@dimen/_3sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/rounded_shape1"
                        android:textSize="@dimen/_15sdp"
                        android:gravity="center_horizontal"
                        android:textColor="#0B4D82"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_3sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="@dimen/_9sdp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutbtnid3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_13sdp"
                app:strokeColor="#3A3838"
                app:strokeWidth="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/layoutbtnid2"
                app:cardBackgroundColor="#DDEBD8D8"
                android:layout_marginHorizontal="@dimen/_20sdp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VegaLayoutManager"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold"
                        android:paddingVertical="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:background="@drawable/rounded_shape2"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="#141414"
                        />
                    <TextView
                        android:id="@+id/vegaLayoutManagerlinkid"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/text3"
                        android:text="GifHub Link"
                        android:paddingVertical="@dimen/_3sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/rounded_shape1"
                        android:textSize="@dimen/_15sdp"
                        android:gravity="center_horizontal"
                        android:textColor="#0B4D82"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_3sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="@dimen/_9sdp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>